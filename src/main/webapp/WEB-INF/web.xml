<!--        <url-pattern>/listUser</url-pattern>-->
<!--    </servlet-mapping>-->
    <!--    servlet for work with roles-->
    <servlet>
        <servlet-name>ServletRoles</servlet-name>
        <servlet-class>ru.callinsicght.countwords.controller.users.ServletRoles</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletRoles</servlet-name>
        <url-pattern>/listRoles</url-pattern>
    </servlet-mapping>
<!--    list bd-->
    <servlet>
        <servlet-name>ServletDbList</servlet-name>
        <servlet-class>ru.callinsicght.countwords.controller.ServletDbList</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDbList</servlet-name>
        <url-pattern>/dbList</url-pattern>
    </servlet-mapping>
</web-app>
